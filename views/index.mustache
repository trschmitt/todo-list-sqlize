<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <form action="/" method="post">
      <button type="submit">ToDo Item submit</button>
      <input type="text" name="itemInput" >
    </form>
    {{#error}}
      <h4>{{.}}</h4>
    {{/error}}
    <form action="./models/todo" method="post">
      <h3>Incomplete</h3>
      <ul id="tasks">
        {{#todos}}
          {{^complete}}
            <li>
              <a href="/"><button type="button">Complete</button></a>
              <a href="/"><button type="button">Delete</button></a>
              {{description}}
            </li>
          {{/complete}}
        {{/todos}}
      </ul>
    </form>
    <form action="./models/todo" method="post">
      <h3>Complete</h3>
      <ul id="completed">
        {{#todos}}
          {{#complete}}
            <li>
              <a href="/"><button type="button">Do Over</button></a>
              <a href="/"><button type="button">Delete</button></a>
              {{description}}
            </li>
          {{/complete}}
        {{/todos}}
      </ul>
    </form>
  </body>
</html>
