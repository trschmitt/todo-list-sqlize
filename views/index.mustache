<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <form id="search" action="/todoList" method="post">
      <button type="submit">ToDo Item submit</button>
      <input type="text" name="itemInput" value="">
    </form>
    {{#error}}
      <h4>{{.}}</h4>
    {{/error}}
    <form action="index.html" method="post">
      <ul id="tasks">
        {{#todo}}
          <li>
            <button type="button">Completed</button>
            {{item}}
          </li>
        {{/todo}}
      </ul>
      <ul>
        {{#todo}}
          <h2>{{description}}</h2>
          <p>
          {{#completed}}
            DONE
          {{/completed}}
          {{^completed}}
            NOT COMPLETED
          {{/completed}}
          </p>
        {{/todo}}
      </ul>
  </form>
  </body>
</html>
