<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <form action="/" method="post">
      <button type="submit">ToDo Item submit</button>
      <input type="text" name="itemInput" >
    </form>
    {{#error}}
      <h4>{{.}}</h4>
    {{/error}}
    <form action="/" method="post">
      <h3>Incomplete</h3>
      <ul id="tasks">
        {{#todos}}
          <li>
            <button type="button">Complete</button>
            {{description}}
          </li>
        {{/todos}}
      </ul>
    </form>
    <form action="/" method="post">
      <h3>Complete</h3>
      <ul id="completed">
        {{#todos}}
          {{#completed}}
            <li>
              <button type="button">Delete</button>
              {{description}}
            </li>
          {{/completed}}
        {{/todos}}
      </ul>
    </form>
  </body>
</html>
